@{
    ViewBag.Title = "se";
}

<script>
    $(document).ready(function () {
        $(".a").mouseover(function () {
            $(this).children('.b').css({ "display": "block" });
            $(this).parent('.v').css({ "border": "1px solid black" });

        });
        $(".a").mouseout(function () {
            $(this).children('.b').css({ "display": "none" });

        });
        $(".l").mouseover(function () {
            $(this).children('.btn').css({ "background-color": "pink" });


        });
    });

</script>
<div class="row" style="padding-right:1.3%">
    <div class="col-md-2" style="padding-right:7px; margin-top:0px">
        @Html.Partial("Wq")

    </div>
    <div class="col-md-10" style="background-color:#FF3">
        <div style="width:100%;margin-top:10px; padding-bottom:15px">
            <div class="row">
                <div class="col-md-8"><h3 style="color:#F00">Women's Clothing: (234 Items)</h3></div>
            </div>


        </div>
        <div style="width:100%;">
            <div class="row">
                <div class="col-md-3" style="text-align:center;padding-bottom:15px">
                    <select name="cars" style="width:80%; height:25px; border-radius:5px;" onchange="">
                        <option value="Brands" selected="selected">Brands</option>
                        <option value="saab">Saab</option>
                        <option value="fiat">Fiat</option>
