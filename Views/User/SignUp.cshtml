@model project.Models.User


@{
    ViewBag.Title = "SignUp";
}
<script src="~/Scripts/jquery-1.8.2.js"></script>


<script>
    $(document).ready(function () {
        $('#a').click(function () {
            var value = $('#Email').val();
            alert(value);
            $.getJSON('../User/check?cat=' + value, function (data) {

                if (data) {
                    $('#b').text(data);
                }
                else {
                    $('#b').text(data);
                }

            });


        });

    });

</script>

<div style="width:100%; margin-left:auto; margin-right:auto;background-color:#CCC; border:1px solid #0FF">

    <div class="row" style="margin-top:15px">
        <div class="col-md-11" style="text-align:left; margin-left:30px;">
            <span style="color:#900; font-size:24px;"><b>Create new customer account</b></span>
        </div>

    </div>

    <hr style="margin-top:5px;" />
@using(Html.BeginForm("Save", "User", FormMethod.Post))
        {
    <div class="row" style="margin-top:15px">
        
        
        <div class="col-md-5" style="text-align:right;">
            Gender:
        </div>
        <div class="col-md-0.5">
        </div>
        <div class="col-md-5">
            <select name="gender" style="width:200px; border-radius:4px; height:25px;">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col-md-5" style="text-align:right;">
            Email Address:
        </div>
        <div class="col-md-0.5">
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m=>m.Email)
            <input type="button" id="a" value="chck" /><span id="b"></span>
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col-md-5" style="text-align:right;">
            @Html.LabelFor(m => m.Fname)
        </div>
        <div class="col-md-1" style="color:purple">
            @Html.ValidationMessageFor(m => m.Fname)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Fname) 
        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col-md-5" style="text-align:right;">
            @Html.LabelFor(m => m.Lname)
        </div>
        <div class="col-md-0.5">
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Lname)
        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col-md-5" style="text-align:right;">
            Phone Number:
        </div>
        <div class="col-md-0.5">
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Phone)
        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col-md-5" style="text-align:right;">
            @Html.LabelFor(m => m.Password)
        </div>
        <div class="col-md-0.5">
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Password)
           
        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col-md-5" style="text-align:right;">
            Confirm Password:
        </div>
        <div class="col-md-0.5">
        </div>
        <div class="col-md-5">
            <input type="text" name="CPassword" />
        </div>
    </div>
    <div class="row" style="margin-top:5px">
        <div class="col-md-5" style="text-align:right;">

        </div>
        <div class="col-md-0.5">
        </div>
        <div class="col-md-5">
            <input type="submit" value="Submit" style="background-color:#900; width:100px; height:35px; border-radius:7px; color:#FFF; " />
        </div>
    </div>
    }
</div>
@ViewBag.Category

